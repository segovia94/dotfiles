# GIT STUFF
alias push="git push"

# Undo a `git push`
alias undopush="git push -f origin HEAD^:master"

# git root
alias gr='[ ! -z `git rev-parse --show-cdup` ] && cd `git rev-parse --show-cdup || pwd`'
alias master="git checkout master"

# Networking. IP address, dig, DNS
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
# alias dig="dig +nocmd any +multiline +noall +answer"

# File size
alias fs="stat -f \"%z bytes\""

# Delete all node_module packages
alias delete_npm='for package in `ls node_modules`; do sudo npm uninstall $package; done; sudo rm -rf node_modules/.bin'

# Lando Shortcuts
alias drush='lando drush'
alias drupal='lando drupal'
alias drupal='lando composer'

# Directory shortcuts
alias web="cd ~/websites"
